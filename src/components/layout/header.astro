---
import { siteConfig } from "@/config/site";
import { cn } from "@/lib/utils";

type Props = {
  className?: string;
};

const { className } = Astro.props;
---

<header
  class={cn(
    "flex items-center h-16 z-50 sticky top-0 bg-background",
    className
  )}
>
  <div class="relative container flex items-center justify-between w-full">
    <div class="flex items-center gap-6 md:gap-8 lg:gap-10">
      <a href="/" class="hidden items-center space-x-2 md:flex">
        <span class="hidden sm:inline-block text-3xl honeypirls text-primary">
          {siteConfig.name}
        </span>
      </a>

      <slot name="mobile-nav-header" />

      <div class="hidden md:flex">
        <slot name="left-header" />
      </div>
    </div>

    <!-- logo mobile center -->
    <div
      class="md:hidden"
    >
      <a href="/" aria-label="mindbridge homepage">
        <h2 class="text-primary honeypirls text-xl">{siteConfig.name}</h2>
      </a>
    </div>
    <slot name="right-header" />
  </div>
</header>
